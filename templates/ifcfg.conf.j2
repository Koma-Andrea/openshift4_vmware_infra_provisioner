TYPE=Ethernet
BOOTPROTO=none
NAME={{ item.network.interface |  default(hosts_defaults['network']['interface']) | default(os_interface) }}
DEVICE={{ item.network.interface |  default(hosts_defaults['network']['interface']) | default(os_interface) }}
ONBOOT=yes
IPADDR={{ item.network.ip }}
NETMASK={{ item.network.mask | default(hosts_defaults.network.mask) }}
GATEWAY={{ item.network.gw |  default(hosts_defaults.network.gw) }}
{% for dns in item.network.dns | default(hosts_defaults.network.dns)  %}
DNS{{loop.index}}={{dns}}
{% endfor %}
MTU=1500
